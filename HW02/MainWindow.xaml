<Window
    x:Class="HW3.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HW3"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Home Work 3"
    Width="800"
    Height="600"
    Background="Cornsilk"
    ResizeMode="NoResize"
    mc:Ignorable="d">

    <Canvas
        x:Name="Canva"
        Width="800"
        Height="580">

        <Label
            x:Name="AskLabel"
            Canvas.Left="110"
            Canvas.Top="5"
            Content="Хочете прибавку до зарплати?"
            FontSize="40"
            Foreground="Red" />

        <Button
            x:Name="NoButton"
            Canvas.Top="300"
            Canvas.Right="50"
            Width="100"
            Height="60"
            Click="NoButton_Click"
            Content="Hi"
            FontSize="40" />

        <Button
            x:Name="YesButton"
            Canvas.Left="50"
            Canvas.Top="300"
            Width="100"
            Height="60"
            Content="Так"
            FontSize="40"
            MouseEnter="YesButton_MouseEnter" />
    </Canvas>

</Window>